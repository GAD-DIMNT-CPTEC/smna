CHOPPING_OBJ =  Mod_Parallelism_Group_Chopping.o \
		Mod_Parallelism_Fourier.o \
		Mod_Communications.o \
		Mod_InitChoppingParallel.o \
		Mod_InputArrays.o \
		Mod_InputParameters.o \
		Mod_Sizes.o \
		Mod_SpecDynamics.o \
		Mod_Transform.o \
		Mod_Utils.o \
		Mod_VerticalInterpolation.o \

Mod_Parallelism_Group_Chopping.o: Mod_Parallelism_Group_Chopping.f90 Mod_Parallelism.o Mod_Parallelism_Group.o
	$(MPIF90_C) Mod_Parallelism_Group_Chopping.f90

Mod_Parallelism_Fourier.o: Mod_Parallelism_Fourier.f90
	$(MPIF90_C) Mod_Parallelism_Fourier.f90

Mod_Chopping.o: $(CHOPPING_OBJ) Mod_Chopping.f90 $(LIB_NEMSIO) $(LIB_BACIO64) $(LIB_W3LIB)
	$(MPIF90_C) -I$(NEMSIO_INC) $(LIB_NETCDF) Mod_Chopping.f90

Mod_Communications.o: Mod_Communications.f90 Mod_InputParameters.o Mod_Sizes.o Mod_Parallelism.o Mod_Utils.o
	$(MPIF90_C) -I$(NEMSIO_INC) Mod_Communications.f90

Mod_InitChoppingParallel.o: Mod_InitChoppingParallel.f90 Mod_Sizes.o Mod_Parallelism.o Mod_Transform.o Mod_SpecDynamics.o Mod_Utils.o Mod_Communications.o
	$(MPIF90_C) -I$(NEMSIO_INC) Mod_InitChoppingParallel.f90

Mod_InputArrays.o:  Mod_InputArrays.f90 Mod_InputParameters.o
	$(MPIF90_C) -I$(NEMSIO_INC) Mod_InputArrays.f90

Mod_InputParameters.o:  Mod_InputParameters.f90 Mod_Parallelism.o
	$(MPIF90_C) -I$(NEMSIO_INC) $(LIB_NETCDF) Mod_InputParameters.f90

Mod_Sizes.o: 	Mod_Sizes.f90 Mod_InputParameters.o Mod_Parallelism.o
