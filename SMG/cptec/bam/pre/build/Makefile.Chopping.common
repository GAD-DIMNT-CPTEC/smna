Mod_Transform.o: Mod_Transform.f90 Mod_InputParameters.o Mod_Utils.o Mod_Parallelism.o Mod_Sizes.o Mod_Communications.o
	$(MPIF90_C) -I$(NEMSIO_INC) Mod_Transform.f90

Mod_Utils.o:  Mod_Utils.f90 Mod_Parallelism.o Mod_InputParameters.o Mod_InputArrays.o
	$(MPIF90_C) -I$(NEMSIO_INC) Mod_Utils.f90

Mod_VerticalInterpolation.o:  Mod_VerticalInterpolation.f90 Mod_InputParameters.o
	$(MPIF90_C) -I$(NEMSIO_INC) Mod_VerticalInterpolation.f90

clean_chopping:
	-rm -f $(CHOPPING_OBJ)

